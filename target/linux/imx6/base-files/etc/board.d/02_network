#!/bin/sh
#
# Copyright (C) 2013-2015 OpenWrt.org
#

. /lib/functions/uci-defaults.sh
. /lib/imx6.sh

board=$(imx6_board_name)

board_config_update

case "$board" in
*gw5912 |\
*gw5910 |\
*gw5907 |\
*gw5905 |\
*gw5904 |\
*gw560x |\
*gw52xx |\
*gw51xx)
	ucidef_set_interface_lan 'eth0'
	;;
*gw5902 |\
*gw5901 |\
*gw552x |\
*gw54xx |\
*gw53xx)
	ucidef_set_interfaces_lan_wan 'eth0' 'eth1'
	;;
*wandboard)
	ucidef_set_interface_wan 'eth0'
	;;
esac

board_config_flush

exit 0
