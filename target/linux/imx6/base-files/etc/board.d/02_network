#!/bin/sh
#
# Copyright (C) 2013-2015 OpenWrt.org
#

. /lib/functions/uci-defaults.sh
. /lib/imx6.sh

board=$(imx6_board_name)

board_config_update

case "$board" in
*gw51xx |\
*gw52xx |\
*gw560x |\
*gw5901 |\
*gw5904)
	ucidef_set_interface_lan 'eth0'
	;;
*gw53xx |\
*gw54xx |\
*gw552x |\
*gw5901)
	ucidef_set_interfaces_lan_wan 'eth0' 'eth1'
	;;
*wandboard)
	ucidef_set_interface_wan 'eth0'
	;;
esac

board_config_flush

exit 0
